<div class="container">
  <div class="row">
    <div class="col-xs-6 col-xs-offset-3">
      <h1>My tasks</h1>
      <ul class="list-unstyled">
        <% @tasks.each do |t| %>
          <li>
            <% if t.completed %>
              <i class="far fa-check-square"></i>
            <% else %>
              <i class="far fa-square"></i>
            <% end %>
            <%= link_to t.title, task_path(t) %>
            <%= link_to destroy_task_path(t), method: :delete do %>
              <i class="fas fa-trash-alt"></i>
            <% end %>
          </li>
        <% end  %>
      </ul>
      <hr>
        <%= link_to tasks_new_path do %>
          <i class="fas fa-plus"></i> Add a new task
        <% end %>
    </div>
  </div>
</div>
